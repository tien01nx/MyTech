<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".students.addItem.ScheduleList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/nameCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên lớp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>

        <ImageButton
            android:id="@+id/idStudentList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_view_list_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="#F6F6F6">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/baseline_date_range_24" />

        <TextView
            android:id="@+id/textView5"
            android:paddingStart="0dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        >


        <TextView

            android:id="@+id/idAllSchedule"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tất cả"
            android:background="#F6F6F6"
            android:layout_weight="1"/>

        <TextView

            android:id="@+id/attendanceispresent"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Buổi học có mặt"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/absenteeattendance"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Buổi học vắng"
            android:layout_weight="1"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_margin="20dp"
        />
</LinearLayout>